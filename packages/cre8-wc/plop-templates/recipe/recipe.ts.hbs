   */
  @property()
  styleModifier?: string;


  render() {
    const componentClassName = classnames('c-{{dashCase name}}', this.styleModifier, {
    });

    return html`
      <div class="${componentClassName}">
       <slot></slot>
      </div>
    `;
  }
}

